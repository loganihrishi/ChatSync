{
    "name": "ChatSync",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Automate ChatSync messages",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["http://127.0.0.1:5500/index.html"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
